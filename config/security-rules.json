{
    "rules": {

        // Noeud contenant tous les utilisateurs
        "users": {
            "$oneUser": {
                // Uniquement l'utilisateur connecté peut lire et écrire les informations le concernant.
                ".write": "auth != null && auth.uid == $oneUser",
                ".read": "auth != null && auth.uid == $oneUser",

                "firstName": {
                    ".validate": "newData.isString()"
                },
                "lastName": {
                    ".validate": "newData.isString()"
                },
                "username": {
                    ".validate": "newData.isString()"
                },
                "lists" : {
                    "$lst" : {
                        ".validate" : "root.child('lists').hasChild($lst)"
                    }
                },

                "$other": {
                    ".validate": false
                }
            }
        },

        // Ensembles des listes disponible
        "lists": {
            "$oneList" : {
                // On peut lire et ecrire une listes lorsque celle-ci est inclus la listes des listes de l'utilisateur
                ".read": "auth != null && root.child('users').child(auth.uid).child('lists').hasChild($oneList)",
                ".write": "auth != null && root.child('users').child(auth.uid).child('lists').hasChild($oneList)"
            }
        }
    }
}