{
    "rules": {

        // Noeud contenant tous les utilisateurs
        "users": {
            "$oneUser": {
                // Uniquement l'utilisateur connecté peut lire et écrire les informations le concernant.
                ".write": "auth != null && auth.uid == $oneUser",
                ".read": "auth != null && auth.uid == $oneUser",

                "firstName": {
                    ".validate": "newData.isString()"
                },
                "lastName": {
                    ".validate": "newData.isString()"
                },
                "username": {
                    ".validate": "newData.isString()"
                },
                "lists" : {
                    "$lst" : {
                        ".validate" : "root.child('lists').hasChild($lst)"
                    }
                },

                // Juste ce qui est autorisé, le rest no way
                "$otherUserProps": {
                    ".validate": false
                }
            }
        },

        // Ensembles des listes disponible
        "lists": {
            ".read": "auth != null",

            "$oneList" : {
                // Lecture des noeuds qui m'appartienne, ou en partage
                ".read": "auth != null && (data.child('ownerUid').val() == auth.uid || data.child('sharedUid').hasChild(auth.uid))",
                ".write": "auth != null && (newData.child('ownerUid').val() == auth.uid || newData.child('sharedUid').hasChild(auth.uid))",

                "name": {
                    ".validate": "newData.isString()"
                },
                "ownerUid": {
                    ".validate": "newData.isString()"
                },
                "sharedUid": {
                    "$oneFriend": {
                        // Seul l'ami peut ecrire sa valeur, et le owner ne se partage pas la liste a lui même
                        ".validate": "newData.isString() && newData.val() != newData.parent().parent().child('ownerUid').val()"
                    }
                },
                "items": {
                    "$oneItem": {
                        "name": {
                            ".validate": "newData.isString()"
                        },
                        "qte": {
                            ".validate": "newData.isNumber()"
                        },
                        "checked": {
                            ".validate": "newData.isBoolean()"
                        },

                        // Juste ce qui est autorisé, le rest no way
                        "$otherItemProps": {
                            ".validate": false
                        }
                    }
                },

                // Juste ce qui est autorisé, le rest no way
                "$otherListProps": {
                    ".validate": false
                }
            }
        }
    }
}
